{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "chenglang",
      "camelcase": "Chenglang",
      "title": "Chenglang",
      "scope": "source.cheng",
      "file-types": [
        "cheng"
      ],
      "injection-regex": "^chenglang$",
      "class-name": "TreeSitterChenglang",
      "path": ".",
      "highlights": [
        "queries/cheng/highlights.scm"
      ] 
    }
  ],
  "tree-sitter": [
    {
      "scope": "source.cheng",
      "file-types": [
        "cheng"
      ]
    }
  ],
  "metadata": {
    "version": "0.1.1",
    "license": "MIT",
    "description": "custom shona programming language",
    "authors": [
      {
        "name": "moveaxxff",
        "email": "moveaxxff@gmail.com"
      }
    ],
    "links": {
      "repository": "https://github.com/moveaxxff/tree-sitter-chenglang"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  },
   "theme": {
    "keyword": "purple",
    "function": "blue",
    "type": "green",
    "number": "brown"
  } 
}
